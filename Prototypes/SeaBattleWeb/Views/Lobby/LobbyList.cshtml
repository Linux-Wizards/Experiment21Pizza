 @model IEnumerable<Lobby>

@{
    ViewData["Title"] = "All Lobbies";
}

<h2>All Lobbies</h2>
@* @Html.ActionLink("Game","NewGame"); *@ 
<a asp-action="NewGame" class="btn btn-sm btn-primary">New Game</a>
<a asp-action="LobbyList" class="btn btn-sm btn-secondary">Lobby List</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Owner</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Owner</td>
                <td>
                    <a asp-action="UpdateLobby" asp-route-id="@r.Id">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteLobby" method="post">
                        <input type="hidden" value="@r.Id" name="LobbyId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>